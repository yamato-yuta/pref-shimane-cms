<div class="topic">
  <% section = page.genre.section_except_super %>

  <% if section && section.genre && page.path.index(section.genre.path) != 0 %>
    <div class="topic_section">
      <a href="<%= section.genre.link_uri %>">【<%= section.name %>】</a>
    </div>
  <% elsif section && !section.link.blank? -%>
    <div class="topic_section">
      <a href="<%= section.link %>">【<%= section.name %>】</a>
    </div>
  <% end %>

  <% page.genre.each_from_parent do |genre| -%>
    <% break if page.name == 'index' && genre == page.genre %>
    <a href="<%= genre.link_uri %>"><%= genre.title %></a>&nbsp;&gt;
  <% end %>

  <% if page.name == 'index' -%>
    <%= page.genre.title %>
  <% else -%>
    <a href="<%= page.genre.link_uri %>"><%= page.genre.title %></a>&nbsp;&gt;
    <%= page.title %>
  <% end -%>
</div>
