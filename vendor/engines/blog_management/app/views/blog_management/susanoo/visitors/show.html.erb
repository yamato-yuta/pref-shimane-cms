<%= render partial: '/susanoo/visitors/shared/header' %>
<link type="text/css" rel="alternate stylesheet" href="/stylesheets/blog.css" media="all" title="beige" />
<%= render partial: '/susanoo/visitors/shared/header_sub' %>
  <div id="content-wrapper" class="container">
    <div id="content">
      <div class="row">
        <div class="span12">
          <%= render partial: '/susanoo/visitors/shared/topic_path', locals: {page: @page_view.page} %>
          <div id="honbun">
          <% if @page_view.page.blog_date? %>
            <%= render(partial: '/blog_management/susanoo/visitors/blog_back_path') %>
          <% else -%>
            <div style="width: 100%;">
              <div class="table_div_left" style="width: 15%;">
                <%= render(partial: '/blog_management/susanoo/visitors/blog_submenu') %>
              </div>
              <div class="table_div_left" style="width: 84%; margin-left: 10px;">
          <% end -%>
          <!-- begin_content -->
          <div id="page-content">
            <%= render partial: '/susanoo/visitors/content' %>
          </div><!-- end page-content -->
          <!-- end_content -->
          <% if @page_view.page.blog_date? %>
            <%= render(partial: '/blog_management/susanoo/visitors/blog_back_path') %>
          <% else -%>
              </div>
            </div>
          <% end -%>
          </div><!-- end honbun -->
        </div>
      </div>

      <div class="row">
        <div class="span12">
          <div class="accordion">
            <div class="accordion-group">
              <div class="accordion-heading">
                <span class="accordion-toggle"><%= t('susanoo.visitors.content.label.contact') %></span>
              </div>
              <div class="accordion-body collapse in">
                <div class="accordion-inner">
                <p><strong><%= @page_view.page.genre.section.name %></strong></p>
                <p><%= @page_view.page.genre.section.info %></p>
                </div>
              </div>
            </div>
          </div>
        </div><!-- end .span12 -->
      </div><!-- end .row -->
    </div><!-- end content -->
  </div>
<%= render partial: '/susanoo/visitors/shared/footer' %>
