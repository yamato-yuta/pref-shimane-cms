<!-- banner -->
<div id="banner">
  <script type="text/javascript">udMenu('<%= @page_view.page.path_base%>');</script>

  <noscript>
    <p id="ud_menu">
      <a href="<%= @page_view.path %><%= @page_view.page.name %>.m3u">
        <%= image_tag('susanoo/visitors/basic/speak.gif', :alt => 'よみあげ', :size => '39x39') %>
      </a>
      <a href="<%= @page_view.path %><%= @page_view.page.name %>.html.r">
        <%= image_tag('ruby_off.gif', :alt => 'ふりがなをつける', :size => '39x39') %>
      </a>
    </p>
  </noscript>
</div>

<!-- banner end -->
<div style="clear: both"></div>
</div>
