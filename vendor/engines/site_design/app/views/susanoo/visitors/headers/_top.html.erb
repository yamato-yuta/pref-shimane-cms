<!-- main -->
<div id="main">
  <% if emergency_exist? %>
    <div id="emergency-container">
      <div id="top-emergency">
        <div id='emergency' class="round_corner">
          <div class='overflow'>
            <div class='emergency-header'>
              <div class='header-title'>
                <h2>緊急情報</h2>
              </div>
              <div class='header-note'>
                <p>県が発表している緊急情報を掲載しています。</p>
              </div>
              <div style='clear: both'></div>
            </div>
            <%= render template: 'plugins/emergency' %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <!-- photo -->
    <div id="photo">
      <%= link_to '', top_photo_link, :id => 'photo_end' %>
    </div>
    <!-- photo end -->
  <% end %>
  <p class="skip_anchor"><a name="genre_menu">ここから共通メニュー</a></p>
