<%= form_for([:susanoo, :admin, @consult_category], html: {id: 'consult-category-form', class: 'form-horizontal'}, remote: true) do |f| %>
  <%= error_messages_for(@consult_category) %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :description %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit t('shared.save'), class: 'btn btn-primary btn-small' %>
      <% unless @consult_category.new_record? -%>
      <%= link_to t('shared.cancel'), cancel_susanoo_admin_consult_categories_path, remote: true, class: 'btn btn-danger btn-small' %>
      <% end -%>
    </div>
  </div>
<% end %>
