<div id="event_calendar_pickup">
  <div class="editable-plugin bootstrap">
    <div class="form-horizontal">
      <div class="row">
        <div class="span6">
          <div class="control-group">
            <div class="controls">
              <p class="text">
                <%= raw t("plugins.descriptions.event_calendar_pickup") %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="span6">
          <div class="control-group">
            <label class="control-label">
              <%= t("plugins.attributes.event_calendar_pickup.path") %>
            </label>
            <div class="controls">
              <%= text_field_tag(:path, "", "data-arg" => 1, id: nil) %><br/>
              <span class="muted description"><%= raw t("plugins.descriptions.attributes.event_calendar_pickup.path") %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="span6">
          <div class="control-group">
            <label class="control-label">
              <%= t("plugins.attributes.event_calendar_pickup.limit") %>
            </label>
            <div class="controls">
              <%= text_field_tag(:limit, 5, "data-arg" => 2, id: nil) %><br/>
              <span class="muted description"><%= raw t("plugins.descriptions.attributes.event_calendar_pickup.limit") %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


