<% if @page_view.rss_create? && @page_view.rss_path && @page_view.page.try(:persisted?) -%>
<link type="application/rss+xml" rel="alternate" href="<%= @page_view.rss_path %>" media="all" title="RSS" />
<% end -%>
<% if @page_view.edit -%>
<%= stylesheet_link_tag 'editor.iframe', media: 'all' %>
<%= javascript_include_tag "application" %>
<%= javascript_include_tag "editor.iframe" %>
<% else -%>
<script type="text/javascript" src="/javascripts/jquery.js"></script>
<script type="text/javascript" src="/javascripts/bootstrap.js"></script>
<% end -%>
