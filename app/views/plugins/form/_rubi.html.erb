<div id="rubi">
  <div class="editable-plugin bootstrap">  
    <div class="form-horizontal">
      <div class="row">
        <div class="span6">
          <div class="control-group">
            <div class="controls">
              <p class="text">
                <%= raw t("plugins.descriptions.rubi") %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="span6">
          <div class="control-group">
            <label class="control-label">
              <%= t("plugins.attributes.rubi.word") %>
            </label>
            <div class="controls">
              <%= text_field_tag(:word, nil, "data-arg" => 1, id: nil) %><br/>
              <span class="muted description"><%= raw t("plugins.descriptions.attributes.rubi.word") %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="span6">
          <div class="control-group">
            <label class="control-label">
              <%= t("plugins.attributes.rubi.text") %>
            </label>
            <div class="controls">
              <%= text_field_tag(:text, nil, "data-arg" => 2, id: nil) %><br/>
              <span class="muted description"><%= raw t("plugins.descriptions.attributes.rubi.text") %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


