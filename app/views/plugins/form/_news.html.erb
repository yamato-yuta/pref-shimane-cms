<div id="news">
  <div class="editable-plugin bootstrap">  
    <div class="form-horizontal">
      <div class="row">
        <div class="span6">
          <div class="control-group">
            <div class="controls">
              <p class="text">
                <%= raw t("plugins.descriptions.news") %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="span6">
          <div class="control-group">
            <label class="control-label">
              <%= t("plugins.attributes.news.limit") %>
            </label>
            <div class="controls">
              <%= text_field_tag(:limit, nil, "data-arg" => 1, id: nil) %>
              <span class="muted description"><%= raw t("plugins.descriptions.attributes.news.limit") %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="span6">
          <div class="control-group">
            <label class="control-label">
              <%= t("plugins.attributes.news.date") %>
            </label>
            <div class="controls">
              <%= text_field_tag(:date, nil, "data-arg" => 2, id: nil) %>
              <span class="muted description"><%= raw t("plugins.descriptions.attributes.news.date") %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

